{
  "include": ["src/**/*"],
  "exclude": ["dist", "src/**/*.spec.ts", "node_modules"],
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "lib": ["ES2015"],
    "module": "ESNext",
    "target": "es6"
  }
}
